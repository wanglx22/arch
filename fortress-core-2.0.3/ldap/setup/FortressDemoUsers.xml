                    maxAge="7776000"
                    inHistory="5"
                    checkQuality="2"
                    minLength="4"
                    expireWarning="2592000"
                    graceLoginLimit="3"
                    lockout="true"
                    lockoutDuration="0"
                    maxFailure="3"
                    failureCountInterval="0"
                    mustChange="true"
                    allowUserChange="true"
                    safeModify="false" />
            </addpwpolicy>

